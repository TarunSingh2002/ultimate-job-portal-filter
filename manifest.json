{
  "manifest_version": 3,
  "name": "Job Filter (LinkedIn + Naukri)",
  "version": "2.0",
  "description": "Advanced job filtering for LinkedIn and Naukri.com",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.naukri.com/*"],
      "js": ["naukri-content.js"],
      "run_at": "document_idle"
    }
  ]
}
