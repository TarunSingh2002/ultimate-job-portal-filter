{
  "manifest_version": 3,
  "name": "LinkedIn Job Filter",
  "version": "1.0",
  "description": "Hide jobs based on title keywords and company names",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ]
}