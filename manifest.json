{
  "manifest_version": 3,
  "name": "Job Filter (LinkedIn + Naukri + Indeed + Glassdoor + Foundit)",
  "version": "2.4",
  "description": "Advanced job filtering for LinkedIn, Naukri.com, Indeed.com, Glassdoor, and Foundit.in",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.naukri.com/*"],
      "js": ["naukri-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://in.indeed.com/*", "https://www.indeed.com/*"],
      "js": ["indeed-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.glassdoor.com/*", "https://www.glassdoor.co.in/*"],
      "js": ["glassdoor-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.foundit.in/*", "https://www.foundit.com/*"],
      "js": ["foundit-content.js"],
      "run_at": "document_idle"
    }
  ]
}