{
  "manifest_version": 3,
  "name": "Job Filter (LinkedIn + Naukri + Indeed + Glassdoor)",
  "version": "2.3",
  "description": "Advanced job filtering for LinkedIn, Naukri.com, Indeed.com, and Glassdoor",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.naukri.com/*"],
      "js": ["naukri-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://in.indeed.com/*", "https://www.indeed.com/*"],
      "js": ["indeed-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.glassdoor.com/*", "https://www.glassdoor.co.in/*"],
      "js": ["glassdoor-content.js"],
      "run_at": "document_idle"
    }
  ]
}